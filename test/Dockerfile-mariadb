FROM debian:bookworm

# 1) Install MariaDB server
RUN apt-get update && \
    apt-get install -y mariadb-server && \
    rm -rf /var/lib/apt/lists/*

# 2) Make sure runtime directories exist and belong to mysql user
RUN mkdir -p /run/mysqld /var/lib/mysql && \
    chown -R mysql:mysql /run/mysqld /var/lib/mysql

# 3) Copy our custom entrypoint script
COPY mariadb-entrypoint.sh /usr/local/bin/mariadb-entrypoint.sh
RUN chmod +x /usr/local/bin/mariadb-entrypoint.sh

EXPOSE 3306

# 4) Run our script as the container's main process
CMD ["sh", "/usr/local/bin/mariadb-entrypoint.sh"]
