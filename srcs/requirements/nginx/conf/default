server {
    # http2 becasue default is http1.1
    listen 443 http2 ssl; # ipv4
    listen [::]:443 http2 ssl; #ipv6

    server_name ${DOMAIN_NAME};
    server_name www.${DOMAIN_NAME};

    #SSL certificates
    ssl on; #redundant
    ssl_certificate /etc/ssl/certs/bryeap.crt;
    ssl_certificate_key /etc/ssl/private/bryeap.key;

    ssl_protocols TLSv1.3;
    root /var/www/html;

    index index.php;

    # served when dir exist but no index file
    location / {
        autoindex on;
        autoindex_format html;
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ .php$ {
        if (!-f $document_root$fastcgi_script_name)
        { 
            return 404;
        }
        try_files $uri =404; # redundant
        include /etc/nginx/fastcgi_params; # includes standard fastcgi params
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name; # path to the script
        fastcgi_pass wordpress:9000; # pass the request to the php-fpm container
            }
}